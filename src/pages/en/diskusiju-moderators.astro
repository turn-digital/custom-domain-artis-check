---
import "~styles/style.scss";
import Layout from "../../components/Layout/Layout";
import Hero from "../../components/Hero/Hero.astro";
import { t, changeLanguage } from "i18next";
import ArticleCard from "../../components/ArticleCard/ArticleCard";
import Reviews from "../../components/Reviews/Reviews";
import Button from "../../components/Button/Button";

changeLanguage("en");

const footerInfo = {
    title: t("index.Footer_Title_Index"),
    phone: t("index.Footer_Phone_Index"),
    email: t("index.Footer_Email_Index"),
    fbLink: t("index.Footer_FbLink_Index"),
    fbInLink: t("index.Footer_InLink_Index"),
};
const reviewFbBtn = {
    title: t("index.Review_FaceBook_Button_Title"),
    target: "_blank",
    link: "https://www.facebook.com/artis.ozolins/friends?lst=100000075771612%3A1421011988%3A1560273788&source_ref=pb_friends_tl",
    class: "button--fb",
    icon: "fb-icon",
};
const articlesImagesAlt = [t("Article_1_Image_Alt"), t("Article_2_Image_Alt")];
const heroInfo = {
    subtitle: t("moderator.Moderator_Hero_Subtitle"),
    title: t("moderator.Moderator_Hero_Title"),
    content: t("moderator.Moderator_Hero_Content"),
    heroTitle: t("moderator.Hero_title"),
    heroPhone: t("index.Hero_Phone"),
    heroEmail: t("index.Hero_Emai"),
    heroMessengerPageUrl: t("index.Hero_Messenger_Page_Url"),
    background: t("moderator.Background_Image_Alt"),
    arrowTitle: t("index.Arrow_Title"),
    homeIconHref: t("index.Home_Icon_Href"),
};
const articles = [
    {
        item: "/assets/images/moderator-event-disc.jpg",
        type: "image",
        title: t("moderator.Article_1_Title"),
        content: t("moderator.Article_1_Content"),
    },
    {
        item: "/assets/images/moderator-event-lbp-2.png",
        type: "image",
        title: t("moderator.Article_2_Title"),
        content: t("moderator.Article_2_Content"),
    },
    {
        item: "/assets/images/moderator-event-DFF.jpg",
        type: "image",
        title: t("moderator.Article_3_Title"),
        content: t("moderator.Article_3_Content"),
    },
];
const reviews = [
    {
        name: t("moderator.Review_1_Title"),
        position: t("moderator.Review_1_Position"),
        event: t("moderator.Review_1_Event"),
        content: t("moderator.Review_1_Content"),
        image: "/assets/images/janis-andzans.jpg",
    },
    {
        name: t("moderator.Review_2_Title"),
        position: t("moderator.Review_2_Position"),
        event: t("moderator.Review_2_Event"),
        content: t("moderator.Review_2_Content"),
        image: "/assets/images/anete-ugaine.jpg",
    },
];
const reviewesImagesAlt = [
    t("moderator.Review_1_Image_Alt"),
    t("moderator.Review_2_Image_Alt"),
];
---

<Layout
  footerInfo={footerInfo}
  headerInfo={"/diskusiju-moderators"}
  htmlLang={t("index.htmlLang")}
  description={t("moderator.Meta_Desc")}
  title={t("moderator.Meta_Title")}
>
  <div class="page page--wedding">
    <Hero
      type="wedding"
      info={heroInfo}
      image={"/assets/images/moderators.jpg"}
    />
    <div class="page__articles">
      <ArticleCard article={articles} imagesAlt={articlesImagesAlt} />
    </div>
    <div class="page__reviews">
      <Reviews reviews={reviews} imagesAlt={reviewesImagesAlt} />
      <div class="page__reviews-btn">
        <div class="wrapper">
          <Button
            title={reviewFbBtn.title}
            link={reviewFbBtn.link}
            target={reviewFbBtn.target}
            btnClass={reviewFbBtn.class}
            icon={reviewFbBtn.icon}
          />
        </div>
      </div>
    </div>
  </div>
</Layout>
